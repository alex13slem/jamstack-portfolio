---
import type { ProjectWithTechs } from "@/lib/cruds/project";
import { cn } from "@/lib/utils/styles";

interface Props {
  project: ProjectWithTechs;
  class?: string;
}

const { project, class: className } = Astro.props;
const { name, image_cover, site_url } = project;
---

<section
  class={cn(`p-[2px] overflow-clip z-10
            rounded-xl animate-gradient__rotate animate-gradient__activeXs
            relative group aspect-video`, className)}
>
  {
    site_url && (
      <a class="absolute inset-0 z-10" href={site_url} target="_blank" />
      <i></i>
    )
  }
  <div
    class={cn(`bg-white/5 backdrop-blur-sm
                rounded-[10px] border border-white/10
                overflow-clip z-10 h-full`)}
  >
    <img
      src={image_cover}
      alt={name}
      width={800}
      height={450}
      class="bg-white/10 w-full h-full object-cover"
    />
  </div>
</section>
